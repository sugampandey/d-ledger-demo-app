
<div class="content-wrapper">
  <div class="sidebar">
    <div class="sidebar-item active" data-section="get">Get Account</div>
    <div class="sidebar-item" data-section="list">List Accounts</div>
    <div class="sidebar-item" data-section="create">Create Account</div>
  </div>

  <div class="main-content">      
    <!-- Get Account API Section -->
    <div class="api-section active" id="getSection">
      <h2>Get Account</h2>
      <!-- Your existing get account form -->
      <form id="getAccountForm">
        <div class="form-group">
          <label for="accountId">Account ID:</label>
          <input type="number" id="accountId" required>
        </div>  
        <div class="form-group">
          <label for="getCompanyId">Company ID:</label>
          <input type="number" id="getCompanyId" required>
        </div>
        <button type="submit">Send Request</button>
      </form>
      <div class="result-container" id="getResult"></div>
    </div>

    <!-- List Accounts API Section -->
    <div class="api-section" id="listSection">
      <h2>List Accounts</h2>
      <!-- Your existing list accounts form -->
      <form id="listAccountsForm">
        <div class="form-group">
          <label>Company ID:</label>
          <input type="number" id="listCompanyId" required>
        </div>
        <div class="form-group">
          <label>Name:</label>
          <input type="text" id="name">
        </div>
        <div class="form-group">
          <label>Account Type:</label>
          <input type="text" id="accountType">
        </div>
        <div class="form-group">
          <label>Active:</label>
          <select id="active">
            <option value="true">True</option>
            <option value="false">False</option>
          </select>
        </div>
        <div class="form-group">
          <label>Max Results:</label>
          <input type="number" id="maxResults" value="100">
        </div>
        <div class="form-group">
          <label>Start Position:</label>
          <input type="number" id="startPosition" value="0">
        </div>
        <button type="submit">Send Request</button>
      </form>
      <div class="result-container" id="listResult"></div>
    </div>

    <!-- Create Account API Section -->
    <div class="api-section" id="createSection">
      <h2>Create Account</h2>
      <!-- Your existing create account form -->
      <%= form_tag("/api/v1/accounts", multipart: true, id: "createAccountForm", class: "form") do %>
        <div class="form-group">
          <%= label_tag :file, "File:" %>
          <%= file_field_tag :file %>
        </div>

        <div class="form-group">
          <%= label_tag :company_id, "Company ID:" %>
          <%= number_field_tag :company_id, nil, required: true %>
        </div>

        <%= submit_tag "Send Request", class: "button" %>
      <% end %>
      <div class="result-container" id="createResult"></div>
    </div>
  </div>
</div>



